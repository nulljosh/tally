{
  "version": 2,
  "builds": [
    {
      "src": "src/api.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "memory": 1024
      }
    },
    {
      "src": "api/upload.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/upload", "dest": "/api/upload.js" },
    { "src": "^/screen$", "dest": "/src/api.js" },
    { "src": "/api/(.*)", "dest": "/src/api.js" },
    { "src": "/data/(.*)", "dest": "/src/api.js" },
    { "src": "^/$", "dest": "/web/landing.html" },
    { "src": "^/app$", "dest": "/src/api.js" },
    { "src": "/login", "dest": "/web/login.html" },
    { "src": "/manifest.json", "dest": "/web/manifest.json" },
    { "src": "/sw.js", "dest": "/web/sw.js" },
    { "src": "/(.*\\.(html|css|js|json|png|jpg|svg|ico))", "dest": "/web/$1" }
  ]
}
